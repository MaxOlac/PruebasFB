<h1>New Pony</h1>

<div id="result"></div>
<p id="notice"><%= notice %></p>
<%= render 'form', pony: @pony %>

<%= link_to 'Back', ponies_path %>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Profession</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ponies.each do |pony| %>
      <tr>
        <td><%= pony.name %></td>
        <td><%= pony.profession %></td>
        <td><%= link_to 'Show', pony %></td>
        <td><%= link_to 'Edit', edit_pony_path(pony) %></td>
        <td><%= link_to 'Destroy', pony, method: :delete, data: { confirm: 'Are you sure?' },:remote => true, :class => 'delete_pony' %></td>
      </tr>
    <% end %>
  </tbody>
</table>